<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMessageItemMe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/texteMessageMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_rect_back_right"
        android:maxWidth="300dp"
        android:padding="5dp"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateSeparateurMe"
        tools:text="Texte un peu nul pour essayer le design" />

    <View
        android:id="@+id/separateurViewMe"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorGris"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authorNameMessageMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/texteMessageMe"
        app:layout_constraintTop_toBottomOf="@+id/texteMessageMe"
        tools:text="Mathieu Mandret le 24/04 Ã  22h15" />

    <TextView
        android:id="@+id/dateSeparateurMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#FFFFFF"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/separateurViewMe"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="16/01/17 9h54" />

    <ImageView
        android:id="@+id/imageMessageMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="250dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/texteMessageMe"
        app:layout_constraintTop_toTopOf="@+id/texteMessageMe"
        tools:srcCompat="@drawable/placeholder_group" />
</androidx.constraintlayout.widget.ConstraintLayout>
